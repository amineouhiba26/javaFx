<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.MainPageController" spacing="20" alignment="CENTER">
    <TextField fx:id="productNameField" promptText="Enter product name"/>
    <TextField fx:id="productPriceField" promptText="Enter product price"/>
    <TextField fx:id="productCategoryField"
               promptText="Enter product category"/>

    <Button fx:id="addProductButton" text="Add Product" />
    <Button fx:id="showProductsButton" text="Show All Products" />
    <ListView fx:id="productsListView" />
    <Button fx:id="deleteProductButton" text="Delete" onAction="#handleDeleteProduct"/>
</VBox>
