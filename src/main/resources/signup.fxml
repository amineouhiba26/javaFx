<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.SignUpController" spacing="15" alignment="CENTER"
      stylesheets="@styles.css" prefWidth="400" prefHeight="600" styleClass="container">
    <Label text="Sign Up" styleClass="title"/>
    <TextField fx:id="usernameField" promptText="Username" styleClass="text-field"/>
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="password-field"/>
    <Button text="Sign Up" onAction="#handleSignUp" styleClass="button"/>
    <Hyperlink text="Already have an account? Sign In" onAction="#handleGoToSignIn" styleClass="hyperlink"/>
</VBox>
